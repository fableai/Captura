<Page x:Class="Captura.TranslationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Translation Settings">
    <Grid>
        <StackPanel Margin="5">
            <CheckBox Content="Enable Translation"
                      IsChecked="{Binding Settings.Translation.Enabled}"/>
            <DockPanel Margin="0,10">
                <Label Content="API Key:"/>
                <TextBox Text="{Binding Settings.Translation.ApiKey}"
                         IsEnabled="{Binding Settings.Translation.Enabled}"
                         PasswordChar="*"
                         Margin="5,0,0,0"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
